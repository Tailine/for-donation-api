{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",                         
    "rootDir": "./src",
    "typeRoots": [
      "./node_modules/@types",
      "./scr/config/@types"
    ],
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "allowUnusedLabels": true,
    "allowUnreachableCode": true,
    "skipLibCheck": true
  }
}
