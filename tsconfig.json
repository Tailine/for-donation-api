{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",                         
    "rootDir": "./src",
    "baseUrl": "src",
    "paths": {
      "@user/*": ["./user/*"],
      "@donation/*": ["./donation/*"],
      "@shared/*": ["./src/config/*"]
    },
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "allowUnusedLabels": true,
    "allowUnreachableCode": true,
    "skipLibCheck": true
  }
}
